        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Margin="7,19,7,0" HorizontalAlignment="Center" VerticalAlignment="Top" Height="21">are you sure?</TextBlock>
            <Button Content="YES" Click="yes_Click" HorizontalAlignment="Left"  Margin="-27,71,0,10" Width="55" RenderTransformOrigin="-0.454,0.357"></Button>
